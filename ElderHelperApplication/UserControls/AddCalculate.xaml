<UserControl
    x:Class="ElderHelperApplication.UserControls.AddCalculate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElderHelperApplication.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Kalori hari ini: " Margin="0,10,0,0"/>
        <TextBox x:Name="calorieToday" Grid.Column="1"/>

        <Button x:Name="ConfirmButton" Click="ConfirmButton_Click" Grid.Row="1" Content="Masukkan" HorizontalAlignment="Left" Margin="0,10,0,0"/>
        <Button x:Name="CancelButton" Click="CancelButton_Click" Grid.Row="1" Grid.Column="1" Content="Cancel" HorizontalAlignment="Right" Margin="0,10,0,0"/>
    </Grid>
</UserControl>
